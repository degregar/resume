{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "lib": ["ES2019", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "incremental": true,
    "jsx": "react",
    "useDefineForClassFields": true,
    "paths": {
      "*": ["node_modules/*"],
    },
    "resolveJsonModule": true
  },
  "include": ["./**/*", "../*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
